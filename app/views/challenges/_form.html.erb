<div data-controller="generate-enigma">
  <%= simple_form_for(@challenge) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title, input_html: {data: { generate_enigma_target: "title" }} %>
      <%= f.input :description, input_html: {data: { generate_enigma_target: "description" }} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
  <br>
  <%# Generate with AI button%>
  <button type = "button"
          data-action="click->generate-enigma#generate"
          data-generate-enigma-target="generate"
          class="btn btn-primary w-auto"
          data-url="<%= create_with_ai_challenges_path %>">
          Generate with AI
          </button>
  <span data-generate-enigma-target="loading" class="d-none ms-2">
    <span class="spinner-border spinner-border-sm"></span> Generating...
  </span>
</div>
